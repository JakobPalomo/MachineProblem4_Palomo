<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF5FF"
    tools:context=".EmpDetailsUser">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="295dp"
        android:layout_height="522dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="113dp"
            android:layout_height="133dp"
            app:srcCompat="@drawable/user"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employee Name"
            android:textColor="#7C93C3"
            />

        <TextView
            android:id="@+id/ViewName"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="20sp"
            android:textColor="#242424"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textColor="#7C93C3"/>

        <TextView
            android:id="@+id/ViewAge"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="20sp"
            android:textColor="#242424"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#7C93C3"/>

        <TextView
            android:id="@+id/ViewAddress"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="20sp"
            android:textColor="#242424"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textColor="#7C93C3"/>

        <TextView
            android:id="@+id/ViewDepartment"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="20sp"
            android:textColor="#242424"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Position"
            android:textColor="#7C93C3"/>

        <TextView
            android:id="@+id/ViewPosition"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="20sp"
            android:textColor="#242424"/>

        <TextView
            android:id="@+id/fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salary (PHP)"
            android:textColor="#7C93C3"/>

        <TextView
            android:id="@+id/ViewSalary"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="20sp"
            android:textColor="#242424"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Access"
            android:textColor="#7C93C3"/>

        <TextView
            android:id="@+id/ViewAccess"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="20sp"
            android:textColor="#242424"/>

    </LinearLayout>

    <Button
        android:id="@+id/ViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.309" />
</androidx.constraintlayout.widget.ConstraintLayout>